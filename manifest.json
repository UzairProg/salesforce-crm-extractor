{
  "manifest_version": 3,
  "name": "Salesforce CRM Extractor",
  "version": "1.0.0",
  "description": "Extract Opportunity data from Salesforce Lightning",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*.lightning.force.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.lightning.force.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}